{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/marketdata.js": {
      "maxDuration": 10
    },
    "api/marketdata/batch.js": {
      "maxDuration": 30
    },
    "api/gemini/chat.js": {
      "maxDuration": 30
    },
    "api/emma-agent.js": {
      "maxDuration": 300
    },
    "api/emma-briefing.js": {
      "maxDuration": 45
    },
    "api/briefing.js": {
      "maxDuration": 60
    },
    "api/briefing-test.js": {
      "maxDuration": 10
    },
    "api/briefing-simple.js": {
      "maxDuration": 10
    },
    "api/emma-n8n.js": {
      "maxDuration": 60
    },
    "api/supabase-watchlist.js": {
      "maxDuration": 15
    },
    "api/config/tickers.js": {
      "maxDuration": 10
    },
    "api/calendar-economic.js": {
      "maxDuration": 15,
      "memory": 1024
    },
    "api/calendar-earnings.js": {
      "maxDuration": 15,
      "memory": 1024
    },
    "api/calendar-dividends.js": {
      "maxDuration": 15,
      "memory": 1024
    },
    "api/ai-services.js": {
      "maxDuration": 120
    },
    "api/fmp.js": {
      "maxDuration": 10
    },
    "api/finviz-news.js": {
      "maxDuration": 15
    },
    "api/chat.js": {
      "maxDuration": 90
    },
    "api/adapters/sms.js": {
      "maxDuration": 90
    },
    "api/adapters/email.js": {
      "maxDuration": 30
    },
    "api/adapters/messenger.js": {
      "maxDuration": 30
    },
    "api/yield-curve.js": {
      "maxDuration": 15
    },
    "api/rsi-screener.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/treasury-rates.js": {
      "maxDuration": 30
    },
        "api/briefing-prompts.js": {
          "maxDuration": 10
        },
        "api/theme-colors.js": {
          "maxDuration": 10
        },
        "api/email-recipients.js": {
          "maxDuration": 10
        }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/finnhub", "destination": "/api/marketdata" }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/beta-combined-dashboard.html",
      "permanent": false
    },
    {
      "source": "/index.html",
      "destination": "/beta-combined-dashboard.html",
      "permanent": false
    },
    {
      "source": "/test",
      "destination": "/test-simple.html",
      "permanent": false
    }
  ]
}
